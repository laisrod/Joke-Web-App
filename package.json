{
  "name": "jokes-app",
  "version": "1.0.0",
  "description": "A TypeScript application that displays jokes from an API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "npm run build && (lsof -ti:3000 | xargs kill -9 2>/dev/null || true) && npx http-server . -p 3000 -o",
    "serve": "(lsof -ti:3000 | xargs kill -9 2>/dev/null || true) && npx http-server . -p 3000 -o",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0"
  }
}
